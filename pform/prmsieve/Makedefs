CFLAGS 		= -g -O2 -ffloat-store -funroll-loops -fomit-frame-pointer -Wall -Wno-multichar -Wno-long-long -Wshadow -Wbad-function-cast -Wcast-qual -Wconversion  -Winline -Wextern-inline  -Wwrite-strings 
CXXFLAGS	= -g -O2 -ffloat-store -funroll-loops -fomit-frame-pointer -Wall -Wno-multichar -Wno-ctor-dtor-privacy -Wno-long-long -Wshadow -Wbad-function-cast -Wcast-qual -Wconversion  -Winline -Wextern-inline  -Wwrite-strings -Woverloaded-virtual 
CC			= gcc
CXX			= c++
AR			= ar
ARFLAGS		= rc
RANLIB		= ranlib
LD			= ld


.PHONY:	all clean cleanlibs

all:	$(OLIB)

%.o:	%.c
	$(CC) $(CFLAGS) -I. -I../.. -c -o $@ $<

%.o:	%.cpp
	$(CXX) $(CXXFLAGS) -I. -I../.. -c -o $@ $<

maintainer-clean:	distclean
	rm -f configure
	autoconf
	
distclean: clean
	rm -f config.cache
	rm -f config.log
	rm -f config.status
	rm -f config.status.old
	rm -f Makefile
	rm -f deps.d

clean:
	rm -f $(OLIB)

dependencies:
	$(CC) -MM -I. -I../.. $(CLIB) >deps.d
